<Window x:Class="Bliz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bliz"
        mc:Ignorable="d"
        Title="MainWindow" Height="515" Width="365" WindowStartupLocation="CenterScreen" WindowStyle="None" >
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF23203E" Offset="0.9"/>
            <GradientStop Color="#FF1D222C" Offset="1"/>
            <GradientStop Color="#FF1D222C" Offset="0.509"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Window.Resources>
        <!-- Style ComboboxButton  -->
        <Style x:Key="ComboboxButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#FF1B1F29"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>

                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.100" To=" 2,2,0,0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.100" To=" 0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style CmbBtn  -->
        <Style x:Key="CmbBtn" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#FF272E3B"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Foreground" Value="#FF929496"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"  BorderThickness="0"  BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,8,8,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"  Value="True">
                                <Setter  Property="Background" Value="#FF323945"/>
                                <Setter  Property="Foreground" Value="#FFC3C4C8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style TB  -->
        <Style x:Key="TB" TargetType="TextBox">
            <Setter Property="Background" Value="#FF12141A"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FF2D333D"/>
            <Setter Property="Padding" Value="10,8,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid x:Name="root" 
              Height="{TemplateBinding Height}"
              Width="{TemplateBinding Width}"
              SnapsToDevicePixels="True">
                            <Border x:Name="Background" 
                    BorderThickness="1"
                    CornerRadius="2" 
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"/>
                            <ScrollViewer x:Name="PART_ContentHost"
                          BorderThickness="0"
                          Padding="{TemplateBinding Padding}"
                          IsTabStop="False"
                          Background="{x:Null}"
                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Grid>


                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Background" Property="BorderBrush" Value="#ff383c44"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Background" Property="BorderBrush" Value="#ff10578C"/>
                                <Setter TargetName="Background" Property="Background" Value="#ff0e1116"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <!-- Grid ToolBar -->
        <Grid Name="ToolBar" Grid.Row="0" Background="Transparent " MouseDown="ToolBar_MouseDown">
            <Polygon Fill="White" Opacity="0.2" Points="107,0 115,7 249,7 257,0"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                
                <!-- Кнопка сворачивания -->
                <Image Name="MinButton" Height="13" Width="13" Margin="5" MouseDown="MinButton_MouseDown">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="/Image/черта_неактив.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=MinButton}" Value="True">
                                    <Setter Property="Source" Value="/Image/черта_актив.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="1"/>
                    </Image.Effect>
                </Image>

                <!-- Кнопка закрытия -->
                <Image Name="ExitButton" Height="13" Width="13" Margin="5,5,10,5" MouseDown="ExitButton_MouseDown">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="/Image/крестик_неактив.png"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=ExitButton}" Value="True">
                                    <Setter Property="Source" Value="/Image/крестик_актив.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.Effect>
                        <BlurEffect Radius="1"/>
                    </Image.Effect>
                </Image>
            </StackPanel>
        </Grid>

        <!-- Grid Logo -->
        <Grid Name="LogoContainer" Grid.Row="1" Background="Transparent " MouseDown="LogoContainer_MouseDown">
            <Image Source="/Image/logo.png"/>
        </Grid>

        <!--  Border CbmBorder -->
        <Border x:Name="CbmBorder" Grid.Row="2" Height="24" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" 
        Margin="25,15,0,0" CornerRadius="2" BorderThickness="1" Background="Black">

            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="BorderBrush" Value="#FF333842"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#FF51555C"/>
                        </Trigger>
                        <EventTrigger RoutedEvent="PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                Duration="0:0:0.100" To="#FF333842"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                Duration="0:0:0.100" To="#FF51555C"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <!-- Button Страны  (Выбор языка) -->
            <Button Style="{StaticResource ComboboxButton}" Click="Button_Click">
                <StackPanel Orientation="Horizontal">

                    <Image Height="14" Width="14" Margin="5,0,0,0">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="/Image/глобус неактивный.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=CbmBorder}" Value="True">
                                        <Setter Property="Source" Value="/Image/глобус активный.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor,
                                AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsPressed}" Value="True">
                                        <Setter Property="Source" Value="/Image/глобус неактивный.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Image Height="11" Width="11" Margin="3,0,5,0">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="/Image/стрелка неактив.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=CbmBorder}" Value="True">
                                        <Setter Property="Source" Value="/Image/стрелка актив.png.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsPressed}" Value="True">
                                        <Setter Property="Source" Value="/Image/стрелка неактив.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </Button>
        </Border>

        
        <!--  Grid  LeftGrid  -->
        <Grid Name="LeftGrid" Grid.Row="2" Height="160" Width=" 200" 
              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,42,0,0" Visibility="Hidden">

            <Polygon Fill="Black" StrokeThickness="3" 
                     Stroke="#ff0c0101" Points="0,8,0,145,190,145,190,8,37,8,29,0,21,8"/>
            <Polygon Fill="#5f272e3b" StrokeThickness="1"
                     Stroke="#ff40454f" Points="0,8,0,145,190,145,190,8,37,8,29,0,21,8" />

            <Grid Height="132" Width="190" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Margin="0,10,0,0">
                <StackPanel Orientation="Vertical">
                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Америка" />
                    </Button>

                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Еврова" />
                    </Button>

                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Азия" />
                    </Button>

                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Китай" />
                    </Button>

                    <Polygon Fill="White" Points="0,3,190,3" StrokeThickness="1" Stroke="#ff40454E"/>

                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Мне нужна помощь" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <TextBlock Text="Европа" Foreground="#ffacb3bf" Grid.Row="2" FontSize="14" Margin="75 17 0 0"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
        <!--  элемент Border2 -->
        <Border x:Name="CbmBorder2" Grid.Row="2" Height="24" Width="25" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,15,25,0" CornerRadius="2" BorderThickness="1" Background="Black">

            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="BorderBrush" Value="#FF333842"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#FF51555C"/>
                        </Trigger>
                        <EventTrigger RoutedEvent="PreviewMouseDown">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                    Duration="0:0:0.100" To="#FF333842"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="PreviewMouseUp">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                    Duration="0:0:0.100" To="#FF51555C"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <!-- Button настройки -->
            <Button Style="{StaticResource ComboboxButton}" Click="Button_Click_1" >
                <StackPanel Orientation="Horizontal">

                    <Image Height="14" Width="14" Margin="5,0,0,0">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="/Image/Шестеня_неактив.jpg"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=CbmBorder2}" Value="True">
                                        <Setter Property="Source" Value="/Image/шестеня_актив.jpg"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor,
                                        AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsPressed}" Value="True">
                                        <Setter Property="Source" Value="/Image/Шестеня_неактив.jpg"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Image Height="11" Width="11" Margin="3,0,5,0">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="/Image/стрелка неактив.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsMouseOver, ElementName=CbmBorder}" Value="True">
                                        <Setter Property="Source" Value="/Image/стрелка актив.png.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor,
                                        AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsPressed}" Value="True">
                                        <Setter Property="Source" Value="/Image/стрелка неактив.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>
            </Button>
        </Border>

        <!--  Grid  RightGrid  -->
        <Grid Name="RightGrid" Grid.Row="2" Height="125" Width=" 310" 
      HorizontalAlignment="Center" VerticalAlignment="Top" Margin="25,42,0,0" Visibility="Hidden">

            <Polygon Fill="Black" StrokeThickness="3" 
             Stroke="#ff0c0101" Points="0,8,0,120,300,120,300,8,295,8,287,0,297,8" HorizontalAlignment="Center"/>
            
            <Polygon Fill="#5f272e3b" StrokeThickness="1"
             Stroke="#ff40454f" Points="0,8,0,120,300,120,300,8,295,8,287,0,297,8" HorizontalAlignment="Center"/>

            <Grid Height="132" Width="299" HorizontalAlignment="Center" 
          VerticalAlignment="Top" Margin="0,10,0,0">
                <StackPanel Orientation="Vertical">
                    <Button Style="{StaticResource CmbBtn}" >
                        <TextBlock Text="Использовать последний статус" />
                    </Button>

                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Невидимый" />
                    </Button>

                    

                    <Polygon Fill="White" Points="0,3,310,3" StrokeThickness="1" Stroke="#ff40454E"/>

                    <Button Style="{StaticResource CmbBtn}">
                        <TextBlock Text="Настройки"  />
                    </Button>

                    <Button Style="{StaticResource CmbBtn}">
                        <Grid Width="299" Margin="-30 0 0 0">
                            <TextBlock Text="Продолжить без авторизации" Margin="30 0 0 0" HorizontalAlignment="Center"/>
                            
                            <Image Source="/Image/шестеня_актив.jpg" HorizontalAlignment="Left"
                            Margin="35 0 0 0" Height="13" Width="13"/> 
                            
                           
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>


    </Grid>
</Window>
